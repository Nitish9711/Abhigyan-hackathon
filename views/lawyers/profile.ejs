<%- include('../includes/head.ejs') %>
</head>
<body>
   
    <section
    id="lawyer-detail"
    class="lawyer-detail"
    style="margin-bottom: 0px !important"
  >
    <div class="container">
      <div class="profile-info text-left">
        <div class="row hidden-xs">
          <div class="col-sm-2">
            <div class="profile-picture">
              <div class="img-wrapper">
                <img
                  style="width: 110px; height: 145px"
                  title=<%= lawyer.name.first %> <%=lawyer.name.last%>
                  src="<%=lawyer.image%>"
                  alt="One of the best Advocates &amp; Lawyers in Delhi - Advocate Sudershani Ray"
                  class="img-responsive"
                />
              </div>
              <div class="verified">Verified</div>
            </div>
          </div>
          <div class="col-sm-10">
            <div class="clearfix">
              <div class="name">
                <h2 style="font-size: 24px; margin-bottom: 10px">
                  <b><%= lawyer.name.first %> <%=lawyer.name.last%></b>
                </h2>
                <div class="rating">
                  <span class="star-rating">
                    <img
                      style="margin-right: 5px"
                      src="https://lawrato.com/assets/img/sprite/icon/rating-star-full-icon.png"
                      alt="LawRato"
                    /><img
                      style="margin-right: 5px"
                      src="https://lawrato.com/assets/img/sprite/icon/rating-star-full-icon.png"
                      alt="LawRato"
                    /><img
                      style="margin-right: 5px"
                      src="https://lawrato.com/assets/img/sprite/icon/rating-star-full-icon.png"
                      alt="LawRato"
                    /><img
                      style="margin-right: 5px"
                      src="https://lawrato.com/assets/img/sprite/icon/rating-star-full-icon.png"
                      alt="LawRato"
                    /><img
                      style="margin-right: 5px"
                      src="https://lawrato.com/assets/img/sprite/icon/rating-star-half-icon.png"
                      alt="LawRato"
                    />
                  </span>
                  <span class="score">4.6</span> |
                  <span class="score">100</span>+ user ratings
                </div>
              </div>
              <div class="cta text-right">
                  <form action="/lawyers/<%=lawyer._id%>" method="POST">
                    <button type="submit"><a
                    href="#lawyer-get-advice"
                    class="button button-primary img-responsive-full"
                    >CONTACT NOW</a</button>
                  >
                  </form>
                
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-5">
                <div class="item-info">
                  <span class="icon-holder"
                    ><img
                      src="assets/img/sprite/icon/map-marker-icon.png"
                      alt="LawRato"
                  /></span>
                  <span class="item-label">Location: </span>
                  <span class="value"><%= lawyer.address.house %> <%=lawyer.name.locality%> <%=lawyer.name.city%> <%=lawyer.name.country%></span>
                </div>
                <div class="item-info">
                  <span class="icon-holder"
                    ><img
                      src="assets/img/sprite/icon/suitcase-icon.png"
                      alt="LawRato"
                  /></span>
                  <span class="item-label">Experience: </span>
                  <span class="value"><%= lawyer.experience.years %> years</span>
                </div>
              </div>
              <div class="col-sm-7">
                <div class="item-info">
                  <span class="icon-holder"
                    ><img
                      src="assets/img/sprite/icon/lang-icon.png"
                      alt="LawRato"
                  /></span>
                  <span class="item-label">Languages: </span>
                  <span class="value">English, Hindi</span>
                </div>
                <div class="item-info">
                  <span class="icon-holder"
                    ><img
                      src="assets/img/sprite/icon/litigation-icon.png"
                      alt="LawRato"
                  /></span>
                  <span class="item-label">Practice areas: </span>
                  <span class="value">
                    <%= lawyer.practiceAreas %>
                  </span>
                </div>
              </div>
            </div>
            <hr />
          </div>
        </div>
        <div class="profile-summary">
            <%= lawyer.aboutMe %>
           
        </div>
      </div>
    </div>
  </section>


<%- include('../includes/end.ejs') %>